#!/bin/bash

# cleanempty: supprime les dossiers vides dans un dossier donn√©
# Options: --test (dry-run), --interactive (confirmation manuelle)

usage() {
  echo "Usage: $0 <chemin_du_dossier> [--test] [--interactive]"
  echo ""
  echo "Options :"
  echo "  --test         Affiche les dossiers vides sans les supprimer"
  echo "  --interactive  Demande confirmation avant chaque suppression"
  exit 1
}

if [ -z "$1" ]; then
  usage
fi

TARGET_DIR="$1"
TEST_MODE=false
INTERACTIVE_MODE=false

for arg in "$@"; do
  case "$arg" in
    --test)
      TEST_MODE=true
      ;;
    --interactive)
      INTERACTIVE_MODE=true
      ;;
  esac
done

if [ ! -d "$TARGET_DIR" ]; then
  echo "‚ùå '$TARGET_DIR' n'est pas un dossier valide."
  exit 1
fi

echo "üîç Recherche des dossiers vides dans '$TARGET_DIR'..."

empty_dirs=$(find "$TARGET_DIR" -type d -empty | sort -r)

if [ -z "$empty_dirs" ]; then
  echo "‚úÖ Aucun dossier vide trouv√©."
  exit 0
fi

while IFS= read -r dir; do
  if $TEST_MODE; then
    echo "üß™ [TEST] $dir"
  elif $INTERACTIVE_MODE; then
    read -p "‚ùì Supprimer '$dir' ? [o/N] " choice
    case "$choice" in
      [oO]|[oO][uU][iI])
        rmdir "$dir" && echo "üóëÔ∏è Supprim√© : $dir"
        ;;
      *)
        echo "‚è≠Ô∏è Ignor√© : $dir"
        ;;
    esac
  else
    rmdir "$dir" && echo "üóëÔ∏è Supprim√© : $dir"
  fi

done <<< "$empty_dirs"

echo "üèÅ Traitement termin√©."
